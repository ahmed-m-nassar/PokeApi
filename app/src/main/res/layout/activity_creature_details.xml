<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".CreatureDetails.CreatureDetailsActivityImpl">

    <ProgressBar
        android:id="@+id/Creature_Details_ProgressBar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"/>
<RelativeLayout
    android:id="@+id/Creature_Details_ReloadParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <Button
        android:id="@+id/Creature_Details_Reload_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reload"
        android:layout_centerInParent="true"
        />
</RelativeLayout>

    <LinearLayout
        android:id="@+id/Creature_Details_Content_Parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="15dp"
            android:paddingBottom="0dp">
            <TextView
                android:id="@+id/Creature_Details_name_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="Bulbasoor"
                android:textStyle="bold"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/Creature_Details_Image"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

            </ImageView>
            <RelativeLayout
                android:id="@+id/Creature_Details_abilities_parent"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/Creature_Details_Image">
                <TextView
                    android:id="@+id/Creature_Details_ability_text"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/colorPrimary"
                    android:text="Abilities"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"/>
                <ListView
                    android:id="@+id/Creature_Details_abilities_List"
                    android:layout_below="@+id/Creature_Details_ability_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="Moves"
            android:textStyle="bold"
            android:gravity="center"/>
        <ListView
            android:id="@+id/Creature_Details_Moves_ListView"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

    </LinearLayout>

</LinearLayout>